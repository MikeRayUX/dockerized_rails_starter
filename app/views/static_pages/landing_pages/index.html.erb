<% flash.each do |message_type, message| %>
  <div class="w-full py-2 px-4 rounded bg-gray-200 mb-6">
    <h1 class="text-base text-center text-gray-900 font-normal">
      <%= message%>
    </h1>
  </div>
<% end %>

<div class="w-full p-4 flex justify-center items-center">

  <div class="w-1/2 p-4 mx-auto flex flex-col justify-center items-center">
      <div class="my-2">
        <%= link_to 'sign up', signup_path, class: 'text-sm p-2 rounded bg-indigo-800 text-white font-bold mb-4', data: { turbolinks: false }%>
      </div>

      <div class="my-2">
        <%= link_to 'sign in', signin_path, class: 'text-sm p-2 rounded bg-indigo-800 text-white font-bold', data: { turbolinks: false } %>
      </div>

      <% if current_user%>

        <div class="my-2">
          <%= link_to 'sign out', destroy_user_session_path, method: 'delete', class: 'text-sm p-2 rounded bg-red-800 text-white font-bold', data: { turbolinks: false } %>
        </div>

      <% end %>

  </div>

</div>

<%= javascript_pack_tag 'src/components/SampleComponent'%>